rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isValidAmount(amount) {
      return amount is number && amount > 0;
    }

    function isValidDate(date) {
      return date is timestamp;
    }

    // Rules for users collection
    match /users/{userId} {
      // Allow creation of user document during signup
      allow create: if isSignedIn() && isOwner(userId);
      // Allow users to read and update their own data
      allow read, update: if isSignedIn() && isOwner(userId);
      // Prevent deletion
      allow delete: if false;

      // Transactions subcollection
      match /transactions/{transactionId} {
        allow create: if isSignedIn() && isOwner(userId);
        allow read, list, update, delete: if isSignedIn() && isOwner(userId);
      }

      // Settings subcollection
      match /settings/{settingId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      // Bills subcollection
      match /bills/{billId} {
        allow create: if isSignedIn() && isOwner(userId);
        allow read, list, update, delete: if isSignedIn() && isOwner(userId);
      }

      // Preferences subcollection
      match /preferences/{preferenceId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
  }
}